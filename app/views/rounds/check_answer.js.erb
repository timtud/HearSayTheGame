$('.answer').each(function(i, obj){
  $(this).removeAttr("href");

  if ($(this).find('.answer-name').text() === '<%= @answer.name %>'){
    $(this).removeClass('btn-answer');
    $(this).addClass('btn-answer-green');

  } else if($(this).find('.answer-name').text() === '<%= @choice.name %>'){
    $(this).removeClass('btn-answer');
    $(this).addClass('btn-answer-red');
  }

});

$('.next-question').show();
$('.grayer-reveal').removeClass('hidden');
$('.grayer').addClass('hidden');
$(".speech-bubble p").text("<%= @round.score %>");
